<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_orange"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/bg_smile"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLogoAplikasi"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/box_logo"
            android:padding="10dp"
            android:src="@drawable/logo_pesankuy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/poppinsbold"
            android:text="About Pesan Kuy App"
            android:textColor="@color/dark_orange"
            android:textSize="26sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:cardBackgroundColor="#FFFAE2"
            app:cardCornerRadius="16dp"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp">

                    <ImageView
                        android:id="@+id/ivIconKuli"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/icon_sunflower" />

                    <TextView
                        android:id="@+id/tvlblOwner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/ivIconKuli"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Pembuat"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvNamaOwner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvlblOwner"
                        android:layout_toRightOf="@id/ivIconKuli"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Vidya Chandradev"
                        android:textColor="@color/semi_black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvNIMOwner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvNamaOwner"
                        android:layout_toRightOf="@id/ivIconKuli"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="1905551067"
                        android:textColor="@color/semi_black"
                        android:textSize="18sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:background="@android:color/darker_gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingVertical="5dp">

                    <ImageView
                        android:id="@+id/ivIconDeskripsi"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/icon_sunflower" />

                    <TextView
                        android:id="@+id/tvlblDeskripsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ivIconDeskripsi"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Deskripsi"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvNamaPemesan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvlblDeskripsi"
                        android:layout_toRightOf="@id/ivIconDeskripsi"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="@string/deskripsi"
                        android:textAlignment="textStart"
                        android:textColor="@color/semi_black"
                        android:textSize="18sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:background="@android:color/darker_gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingVertical="5dp">

                    <ImageView
                        android:id="@+id/ivIconTahun"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/icon_sunflower" />

                    <TextView
                        android:id="@+id/tvlblTahun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ivIconTahun"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Tahun Dibuat"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvJumlahPesanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvlblTahun"
                        android:layout_toRightOf="@id/ivIconTahun"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="2021"
                        android:textColor="@color/semi_black"
                        android:textSize="18sp" />
                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>